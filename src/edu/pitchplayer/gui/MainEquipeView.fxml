        </HBox>    
        <FlowPane fx:id="equipeFlowPane" orientation="VERTICAL" hgap="10" vgap="10" />
        
        <Pagination fx:id="pagination" layoutX="358.0" layoutY="172.0" prefHeight="200.0" prefWidth="200.0" visible="false" />
