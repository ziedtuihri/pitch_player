    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    
    
    <VBox>
        <HBox spacing="10">
            <children>
                <Label text="Nom du capitaine" />
                <StackPane fx:id="captainNameStackPane">
                    <TextField fx:id="captainNameField" />
